{
  "name": "postit",
  "version": "1.0.0",
  "description": "Minimal social network web app",
  "main": "server/build/bin/www",
  "scripts": {
    "postinstall": "npm run build",
    "build": "npm run build:server",
    "build:server": "sh server/scripts/build.sh",
    "build:client": "webpack --config client/webpack.config.js --watch",
    "start": "node server/build/bin/www",
    "server:dev": "nodemon server/build/bin/www",
    "test": "npm run test:server",
    "test:server": "sh server/scripts/test.sh",
    "test:client": "jest -u",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "jest": {
    "moduleNameMapper": {
      ".scss$": "identity-obj-proxy"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/usmansbk/PostIt.git"
  },
  "keywords": [
    "PostIt",
    "Social Network",
    "Node",
    "Sequelize",
    "Postgres",
    "React",
    "Redux"
  ],
  "author": "Babakolo Usman Suleiman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/usmansbk/PostIt/issues"
  },
  "homepage": "https://github.com/usmansbk/PostIt#readme",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "form-urlencoded": "^2.0.4",
    "history": "^4.7.2",
    "morgan": "^1.9.0",
    "normalizr": "^3.2.4",
    "pg": "^6.4.2",
    "pg-hstore": "^2.3.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "request": "^2.83.0",
    "sequelize": "^4.28.6",
    "sequelize-cli": "^3.2.0"
  },
  "nyc": {
    "exclude": [
      "**/*[sS]pec.js"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.0.6",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "codeclimate-test-reporter": "^0.5.0",
    "coveralls": "^3.0.0",
    "css-loader": "^0.28.8",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "identity-obj-proxy": "^3.0.0",
    "jasmine": "^2.8.0",
    "jest": "^22.0.6",
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.3",
    "nyc": "^11.4.1",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-test-renderer": "^16.2.0",
    "redux-logger": "^3.0.6",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "webpack": "^3.10.0"
  },
  "engines": {
    "node": "8.9.3"
  }
}
