{
  "name": "postit",
  "version": "1.0.0",
  "description": "Minimalist social network web app",
  "main": "server/build/bin/www",
  "scripts": {
    "postinstall": "npm run build",
    "build:server": "sh ./server/scripts/build.sh",
    "build:client": "webpack",
    "build": "npm run build:server",
    "start": "node ./server/build/bin/www",
    "start:dev": "nodemon ./server/build/bin/www",
    "test": "nyc --reporter=lcov --reporter=text-lcov jasmine JASMINE_CONFIG_PATH=server/tests/spec/support/jasmine.json",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "webpack": "webpack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/usmansbk/PostIt.git"
  },
  "keywords": [
    "PostIt",
    "Social Network",
    "Node",
    "Sequelize",
    "Postgres",
    "React",
    "Redux"
  ],
  "author": "Babakolo Usman Suleiman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/usmansbk/PostIt/issues"
  },
  "homepage": "https://github.com/usmansbk/PostIt#readme",
  "dependencies": {
    "@babel/core": "^7.0.0-beta.37",
    "@babel/preset-env": "^7.0.0-beta.37",
    "babel-core": "^6.26.0",
    "babel-preset-react": "^6.24.1",
    "body-parser": "^1.18.2",
    "bunyan": "^1.8.12",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "morgan": "^1.9.0",
    "pg": "^6.4.2",
    "pg-hstore": "^2.3.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "request": "^2.83.0",
    "sequelize": "^4.28.6",
    "sequelize-cli": "^3.2.0"
  },
  "nyc": {
    "exclude": [
      "**/*[sS]pec.js"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.1",
    "codeclimate-test-reporter": "^0.5.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "jasmine": "^2.8.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.3",
    "nyc": "^11.4.1",
    "sass-loader": "^6.0.6",
    "webpack": "^3.10.0"
  },
  "engines": {
    "node": "8.9.3"
  }
