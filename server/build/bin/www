'use strict';

var _server = require('../server');

var _server2 = _interopRequireDefault(_server);

var _models = require('../../db/models');

function _interopRequireDefault(obj) { return obj && obj.__esModule ? obj : { default: obj }; }

var port = process.env.PORT || 8888;

_server2.default.listen(port, function () {
  console.log('Server started at port ' + port);
  _models.sequelize.authenticate().then(function () {
    console.log('Connection to database has been established successfully.');
    _models.sequelize.sync().then(function () {
      console.log('Synchronized models to database successfully.');
    });
  }).catch(function (err) {
    console.log('Unable to establish database connection.', err);
  });
});
